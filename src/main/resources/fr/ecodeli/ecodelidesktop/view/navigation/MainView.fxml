<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>


<BorderPane fx:id="mainBorderPane"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="fr.ecodeli.ecodelidesktop.controller.MainController"
            prefWidth="1000" prefHeight="700"
            stylesheets="@sidebar.css">

    <!-- Sidebar -->
    <left>
        <VBox spacing="10" style="-fx-background-color: #1C2A1F; -fx-padding: 20;" prefWidth="200">
            <HBox alignment="CENTER_LEFT" spacing="10">
                <ImageView fitHeight="48" fitWidth="48">
                    <image>
                        <Image url="@ecodeli.png" />
                    </image>
                </ImageView>
                <Label text="EcoDeli" style="-fx-text-fill: white; -fx-font-size: 24;" />
            </HBox>
            <Button text="Accueil" fx:id="btnStats" styleClass="button"/>
            <Button text="Clients" fx:id="btnClients" styleClass="button"/>
            <Button text="Marchands" fx:id="btnMerchants" styleClass="button"/>
            <Button text="Livraisons" fx:id="btnDeliveries" styleClass="button"/>
            <Button text="Services" fx:id="btnServices" styleClass="button"/>
        </VBox>
    </left>

    <!-- Contenu dynamique -->
    <center>
        <StackPane fx:id="contentArea" />
    </center>

</BorderPane>
