<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.chart.BarChart?>

<GridPane xmlns="http://javafx.com/javafx/8"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="fr.ecodeli.ecodelidesktop.dashboard.StatsViewController"
          fx:id="statsGrid"
          hgap="20" vgap="20"
          alignment="CENTER"
          prefWidth="800.0" prefHeight="600.0">

    <children>
        <!-- Les éléments dynamiques (graphiques) seront ajoutés dans le controller Java -->

        <!-- Bouton placé en bas, centré sur deux colonnes -->
        <Button text="Télécharger au format PDF"
                onAction="#handleExportPdf"
                GridPane.rowIndex="3"
                GridPane.columnIndex="0"
                GridPane.columnSpan="2"
                style="-fx-margin-top: 20px;" />
    </children>
</GridPane>
