<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="fr.ecodeli.ecodelidesktop.warehouse.WarehouseFormController"
      styleClass="form-container"
      spacing="20"
      prefWidth="950"
      prefHeight="750"
      minWidth="950"
      minHeight="750"
      stylesheets="@warehouse-form.css">

    <padding>
        <Insets top="25" right="25" bottom="25" left="25"/>
    </padding>

    <Label fx:id="formTitle" text="Ajouter un entrepôt" styleClass="form-title"/>

    <GridPane styleClass="form-grid" hgap="20" vgap="18">
        <columnConstraints>
            <ColumnConstraints minWidth="140" prefWidth="140" hgrow="NEVER"/>
            <ColumnConstraints minWidth="250" hgrow="ALWAYS"/>
        </columnConstraints>

        <Label text="Ville *" styleClass="form-label" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="cityField" styleClass="form-field"
                   prefWidth="350" prefHeight="35"
                   GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Adresse *" styleClass="form-label" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="addressField" styleClass="form-field"
                   prefWidth="350" prefHeight="35"
                   GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Code postal *" styleClass="form-label" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="postalCodeField" styleClass="form-field"
                   prefWidth="350" prefHeight="35"
                   GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Capacité *" styleClass="form-label" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="capacityField" styleClass="form-field"
                   prefWidth="350" prefHeight="35"
                   GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="Description" styleClass="form-label" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
        <TextArea fx:id="descriptionField" styleClass="form-field"
                  prefRowCount="4"
                  prefWidth="350" prefHeight="120"
                  wrapText="true"
                  GridPane.rowIndex="5" GridPane.columnIndex="1"/>

        <Label text="Image" styleClass="form-label" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
        <HBox spacing="15" alignment="CENTER_LEFT" GridPane.rowIndex="6" GridPane.columnIndex="1">
            <Button fx:id="selectFileButton" text="Choisir un fichier" styleClass="primary-button"
                    prefHeight="35" prefWidth="200"/>
            <Label fx:id="fileLabel" text="Aucun fichier sélectionné" styleClass="file-label"/>
        </HBox>
    </GridPane>

    <Label text="* Champs obligatoires" styleClass="required-label"/>

    <HBox spacing="20" alignment="CENTER_RIGHT" styleClass="button-container">
        <Button fx:id="cancelButton" text="Annuler" styleClass="secondary-button"
                prefWidth="100" prefHeight="40"/>
        <Button fx:id="saveButton" text="Enregistrer" styleClass="primary-button"
                prefWidth="120" prefHeight="40"/>
    </HBox>
</VBox>