<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.Region?>
<VBox xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="fr.ecodeli.ecodelidesktop.warehouse.WarehouseTableController"
      styleClass="main-container"
      spacing="20"
      prefWidth="1200"
      prefHeight="700"
      stylesheets="@warehouse-management.css">

    <HBox spacing="10" alignment="CENTER_LEFT">
        <VBox styleClass="header-section" spacing="10">
            <Label text="Gestion des Entrepôts" styleClass="page-title"/>
            <Label fx:id="totalWarehousesLabel" text="0 entrepôts au total" styleClass="subtitle"/>
        </VBox>
        <Region HBox.hgrow="ALWAYS"/>
        <Button fx:id="addWarehouseButton" text="+ Ajouter un entrepôt" styleClass="action-button"/>
    </HBox>

    <TableView fx:id="warehouseTable" styleClass="modern-table" prefHeight="600">
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
        <columns>
            <TableColumn fx:id="cityColumn" text="Ville" styleClass="table-column" prefWidth="120"/>
            <TableColumn fx:id="addressColumn" text="Adresse" styleClass="table-column" prefWidth="220"/>
            <TableColumn fx:id="postalCodeColumn" text="Code Postal" styleClass="table-column" prefWidth="100"/>
            <TableColumn fx:id="capacityColumn" text="Capacité" styleClass="table-column" prefWidth="80"/>
            <TableColumn fx:id="descriptionColumn" text="Description" styleClass="table-column" prefWidth="250"/>
            <TableColumn fx:id="actionsColumn" text="Actions" sortable="false" styleClass="table-column" prefWidth="150"/>
        </columns>
    </TableView>
</VBox>