<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="fr.ecodeli.ecodelidesktop.services.ServiceTableController"
      styleClass="main-container"
      spacing="20"
      prefWidth="1200"
      prefHeight="700"
      stylesheets="@service-list.css">

    <VBox styleClass="header-section" spacing="10">
        <Label text="Gestion des Services" styleClass="page-title"/>
        <Label fx:id="totalServicesLabel" text="0 prestation au total" styleClass="subtitle"/>
    </VBox>

    <TableView fx:id="serviceTable" styleClass="modern-table" prefHeight="850">
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
        <columns>
            <TableColumn fx:id="nameColumn" text="Nom" styleClass="table-column"/>
            <TableColumn fx:id="cityColumn" text="Ville" styleClass="table-column"/>
            <TableColumn fx:id="typeColumn" text="Catégorie" styleClass="table-column"/>
            <TableColumn fx:id="priceColumn" text="Prix (€)" styleClass="table-column"/>
            <TableColumn fx:id="durationColumn" text="Durée (min)" styleClass="table-column"/>
            <TableColumn fx:id="availableColumn" text="Disponible" styleClass="table-column"/>
            <TableColumn fx:id="statusColumn" text="Validée" styleClass="table-column"/>
            <TableColumn fx:id="actionColumn" text="Actions" sortable="false" styleClass="table-column"/>
        </columns>
    </TableView>

    <HBox styleClass="pagination-container" spacing="15" alignment="CENTER">
        <Button fx:id="prevButton" text="← Précédent" styleClass="pagination-button"/>
        <Label fx:id="pageLabel" text="Page 1 sur 1" styleClass="page-info"/>
        <Button fx:id="nextButton" text="Suivant →" styleClass="pagination-button"/>
    </HBox>
</VBox>
