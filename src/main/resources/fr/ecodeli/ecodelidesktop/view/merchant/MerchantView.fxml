<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="fr.ecodeli.ecodelidesktop.merchant.MerchantTableController"
      styleClass="main-container"
      spacing="20"
      prefWidth="1200"
      prefHeight="700"
      stylesheets="@merchant-list.css">

    <VBox styleClass="header-section" spacing="10">
        <Label text="Gestion des Marchands" styleClass="page-title"/>
        <Label fx:id="totalMerchantsLabel" text="0 marchands au total" styleClass="subtitle"/>
    </VBox>

    <TableView fx:id="merchantTable" styleClass="modern-table" prefHeight="850">
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
        <columns>
            <TableColumn fx:id="merchantColumn" text="Commerçant" styleClass="table-column"/>
            <TableColumn fx:id="companyColumn" text="Entreprise" styleClass="table-column"/>
            <TableColumn fx:id="siretColumn" text="SIRET" styleClass="table-column"/>
            <TableColumn fx:id="countryColumn" text="Pays" styleClass="table-column"/>
            <TableColumn fx:id="phoneColumn" text="Téléphone" styleClass="table-column"/>
            <TableColumn fx:id="descriptionColumn" text="Description" styleClass="table-column"/>
            <TableColumn fx:id="actionsColumn" text="Actions" sortable="false" styleClass="table-column"/>
        </columns>
    </TableView>

    <HBox styleClass="pagination-container" spacing="15" alignment="CENTER">
        <Button fx:id="prevButton" text="← Précédent" styleClass="pagination-button"/>
        <Label fx:id="pageLabel" text="Page 1 sur 1" styleClass="page-info"/>
        <Button fx:id="nextButton" text="Suivant →" styleClass="pagination-button"/>
    </HBox>
</VBox>
